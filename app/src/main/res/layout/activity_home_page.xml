<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/constraintcolor"
    tools:context=".ui.homepage.HomePageActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="80dp"
            android:paddingEnd="0dp">

            <ImageView
                android:id="@+id/img_bki"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bki"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.422"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.039"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_bki"
                android:layout_width="261dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="Beden Kitle İndeksi Hesapla"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/img_bki"
                app:layout_constraintHorizontal_bias="0.36"
                app:layout_constraintStart_toStartOf="@id/img_bki"
                app:layout_constraintTop_toBottomOf="@id/img_bki" />

            <ImageView
                android:id="@+id/img_diet"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/diyet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.422"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_bki"
                app:layout_constraintVertical_bias="0.039"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_diet"
                android:layout_width="261dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="Diyet Listeleri"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/img_diet"
                app:layout_constraintHorizontal_bias="0.602"
                app:layout_constraintStart_toStartOf="@id/img_diet"
                app:layout_constraintTop_toBottomOf="@id/img_diet" />

            <ImageView
                android:id="@+id/img_calendar"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/takvim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.422"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_diet"
                app:layout_constraintVertical_bias="0.039"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text_calendar"
                android:layout_width="261dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="Takvim"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/img_calendar"
                app:layout_constraintHorizontal_bias="0.36"
                app:layout_constraintStart_toStartOf="@id/img_calendar"
                app:layout_constraintTop_toBottomOf="@id/img_calendar" />

            <ImageView
                android:id="@+id/img_water"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/su"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.422"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_calendar"
                app:layout_constraintVertical_bias="0.039"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_water"
                android:layout_width="261dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="Su Tüketimi"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/img_water"
                app:layout_constraintHorizontal_bias="0.36"
                app:layout_constraintStart_toStartOf="@id/img_water"
                app:layout_constraintTop_toBottomOf="@id/img_water" />

            <ImageView
                android:id="@+id/img_weight_tracking"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/tart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.422"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_water"
                app:layout_constraintVertical_bias="0.039"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_weight_tracking"
                android:layout_width="261dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="Kilo Takibi"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/img_weight_tracking"
                app:layout_constraintHorizontal_bias="0.36"
                app:layout_constraintStart_toStartOf="@id/img_weight_tracking"
                app:layout_constraintTop_toBottomOf="@id/img_weight_tracking" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>


