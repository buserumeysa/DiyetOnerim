<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef2f5"
    tools:context="ui.calorieCounter.CalorieCounterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/circularProgressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progress="25"
                    app:indicatorColor="@color/blue900"
                    app:indicatorSize="160dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:trackColor="@color/blue600"
                    app:trackCornerRadius="8dp"
                    app:trackThickness="15dp" />

                <TextView
                    android:id="@+id/txt_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="295.5"
                    android:textColor="@color/constraintcolor"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/txt_kcal"
                    app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicator"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="@+id/circularProgressIndicator"
                    app:layout_constraintTop_toTopOf="@id/circularProgressIndicator"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txt_kcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of 1200 kcal"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/circularProgressIndicator"
                    app:layout_constraintEnd_toEndOf="@id/circularProgressIndicator"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@id/circularProgressIndicator"
                    app:layout_constraintTop_toBottomOf="@id/txt_calorie">

                </TextView>

                <TextView
                    android:id="@+id/txt_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Protein, gr"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/linearProgressIndicator"
                    app:layout_constraintStart_toStartOf="@+id/linearProgressIndicator"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressIndicator" />


                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/linearProgressIndicator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:progress="15"
                    app:indicatorColor="@color/blue900"
                    app:layout_constraintEnd_toStartOf="@+id/linearProgressIndicator2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressIndicator"
                    app:trackColor="@color/blue600"
                    app:trackCornerRadius="8dp"
                    app:trackThickness="8dp" />

                <TextView
                    android:id="@+id/txt_amount_of_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19.5"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/linearProgressIndicator"
                    app:layout_constraintTop_toBottomOf="@+id/linearProgressIndicator" />

                <TextView
                    android:id="@+id/txt_protein_gr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="of 97"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txt_amount_of_protein"
                    app:layout_constraintStart_toEndOf="@+id/txt_amount_of_protein" />

                <TextView
                    android:id="@+id/txt_fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yağ, gr"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/linearProgressIndicator2"
                    app:layout_constraintStart_toStartOf="@+id/linearProgressIndicator2" />


                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/linearProgressIndicator2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:progress="15"
                    app:indicatorColor="@color/blue900"
                    app:layout_constraintEnd_toStartOf="@+id/linearProgressIndicator3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/linearProgressIndicator"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressIndicator"
                    app:trackColor="@color/blue600"
                    app:trackCornerRadius="8dp"
                    app:trackThickness="8dp" />

                <TextView
                    android:id="@+id/txt_amount_of_fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.5"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/linearProgressIndicator2"
                    app:layout_constraintTop_toBottomOf="@+id/linearProgressIndicator2" />

                <TextView
                    android:id="@+id/txt_fats_gr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="of 28.7"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txt_amount_of_fats"
                    app:layout_constraintStart_toEndOf="@+id/txt_amount_of_fats" />

                <TextView
                    android:id="@+id/txt_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karbonhidrat, gr"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/linearProgressIndicator3"
                    app:layout_constraintStart_toStartOf="@+id/linearProgressIndicator3" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/linearProgressIndicator3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:progress="15"
                    app:indicatorColor="@color/blue900"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/linearProgressIndicator2"
                    app:layout_constraintTop_toBottomOf="@+id/circularProgressIndicator"
                    app:trackColor="@color/blue600"
                    app:trackCornerRadius="8dp"
                    app:trackThickness="8dp" />

                <TextView
                    android:id="@+id/txt_amount_of_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37.7"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/linearProgressIndicator3"
                    app:layout_constraintTop_toBottomOf="@+id/linearProgressIndicator3" />

                <TextView
                    android:id="@+id/txt_carbs_gr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="of 161.6"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txt_amount_of_carbs"
                    app:layout_constraintStart_toEndOf="@+id/txt_amount_of_carbs" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/materialCardView"
            tools:layout_editor_absoluteX="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt_breakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Kahvaltı"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="295.5 kcal"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txt_breakfast"
                    app:layout_constraintEnd_toEndOf="parent" />


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/txt_breakfast">

                    <include layout="@layout/item_1" />

                    <include layout="@layout/item_2" />

                    <include layout="@layout/item_3" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="24dp"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txt_lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Öğle Yemeği"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended 600 kcal"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txt_lunch"
                    app:layout_constraintEnd_toEndOf="parent" />


                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="24dp"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_lunch" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txt_dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akşam Yemeği"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended 600 kcal"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@+id/txt_dinner"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="24dp"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_dinner" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>