<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/constraintcolor"
    tools:context=".ui.weightTracking.WeightTrackingActivity">

    <TextView
        android:id="@+id/txt_weight_tracking_description"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Kilo Takibi İçin Gerekli Bilgileri Giriniz"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105">

    </TextView>

    <EditText
        android:id="@+id/edt_txt_current_weight"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="MEVCUT KİLONUZU GİRİNİZ : "
        android:textAlignment="center"
        android:textColorHint="@color/constraintcolor"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262">

    </EditText>

    <EditText
        android:id="@+id/edt_txt_goal_weight"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="HEDEF KİLONUZU GİRİNİZ : "
        android:textAlignment="center"
        android:textColorHint="@color/constraintcolor"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513">

    </EditText>

    <Button
        android:id="@+id/btn_show_weight_tracking"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="Aradaki farkı görüntülemek için tıklayınız"
        android:textAlignment="center"
        android:textColor="@color/constraintcolor"
        android:textSize="12dp"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

    </Button>

    <Button
        android:id="@+id/btn_save_goal_weight"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="Hedef Kilonuzu Kaydetmek İçin Tıklayınız "
        android:textAlignment="center"
        android:textColor="@color/constraintcolor"
        android:textSize="12dp"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.642">

    </Button>

    <Button
        android:id="@+id/btn_save_current_weight"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="Mevcut Kilonuzu Kaydetmek İçin Tıklayınız "
        android:textAlignment="center"
        android:textColor="@color/constraintcolor"
        android:textSize="12dp"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>